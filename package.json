{
  "name": "cypress",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "cypress:run": "cypress run && npx nyc report --reporter=text-summary"
  },
  "dependencies": {
    "next": "14.1.4",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.33",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "babel-plugin-istanbul": "^6.1.1",
    "cypress": "^13.7.2",
    "eslint": "^8",
    "eslint-config-next": "14.1.4",
    "nyc": "^15.1.0",
    "nyc-config-tsx": "^0.1.0",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5"
  },
  "nyc": {
    "extends": "nyc-config-tsx",
    "report-dir": "cypress-coverage",
    "extension": [".js", ".jsx", ".ts", ".tsx"],
    "include": ["src/**/*"],
    "sourceMap": true,
    "instrument": true,
    "reporter": [
      "json",
      "lcov",
      "text-summary"
    ]
  }
}
